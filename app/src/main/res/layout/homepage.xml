<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:layout_width="100px"
            android:layout_height="100px" app:srcCompat="@drawable/one"
            android:id="@+id/img_shot" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_userName" app:layout_constraintStart_toEndOf="@+id/img_shot"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/img_shot"
            app:layout_constraintBottom_toBottomOf="@+id/img_shot" android:textSize="18sp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="900px" app:srcCompat="@drawable/two"
            android:id="@+id/img_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/img_shot" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:scaleType="fitXY"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="250px" app:srcCompat="@drawable/iglike"
            android:id="@+id/imageView5" android:scaleType="fitXY" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_content"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_content"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/img_shot"
            android:textSize="18sp"/>
</android.support.constraint.ConstraintLayout>
